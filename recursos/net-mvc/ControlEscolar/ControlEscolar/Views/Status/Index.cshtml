<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Administracion de status</title>
    
</head>
<body>

    <script type="text/javascript">
        $(document).ready(function () {
            var datatable = new DataTable('#tablaStatus');
        });

        function agregarStatus() {
            document.location = "/Status/Add/";
        }

        function editarStatus(idStatus) {
            document.location = "/Status/Edit/" + idStatus;
        }

        function borrarStatus(idStatus) {
            document.location = "/Status/Delete/" + idStatus;
        }

    </script>

    <br/>

    <h1>Administracion de status</h1>
    <br />
    <div class="row">
        <div class="col-md-9 bg-light text-right">

        </div>
        <div class="col-md-3 bg-light text-right">
            <input type="button" value="Agregar Status" onclick="agregarStatus()" />
        </div>
    </div>
        <br />
        <br />

        <table id="tablaStatus" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Controles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var status in ViewData["catalogoStatus"] as List<ControlEscolar.Models.Status>)
                {
                    <tr>
                        <td>@status.ID</td>
                        <td>@status.Nombre</td>
                        <td>
                            <input type="button" value="Editar" onclick="editarStatus('@status.ID')"/>
                            <input type="button" value="Borrar" onclick="borrarStatus('@status.ID')"/>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    


</body>
</html>